<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ccb_comm_bg0"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

 <TextView
        android:id="@+id/txt1"
        android:text="@string/chenggusuanming"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />


    <EditText
    android:id="@+id/name"
    android:layout_width="fill_parent"
    android:layout_height="36dp"
    android:hint="请输入姓名..."
    android:textSize="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/txt1"
    />

    <EditText
        android:id="@+id/iphone"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:hint="请输入手机号码..."
        android:textSize="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/name"
        />

    <EditText
        android:id="@+id/datetxt"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:hint="点击选择日期..."
        android:textSize="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/iphone"
        />

    <EditText
        android:id="@+id/timetxt"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:hint="点击选择时间..."
        android:textSize="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/datetxt"
        android:layout_below="@+id/iphone"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datetxt"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:text="@string/sbm"
        android:background="@drawable/btn2"

        />

    <TextView
        android:text="showToday"
        android:id="@+id/showToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"
        />




</RelativeLayout>
